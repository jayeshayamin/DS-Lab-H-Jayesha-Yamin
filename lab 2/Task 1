#include <iostream>
using namespace std;

/*
Task #1:
Implement a program that dynamically allocates a 1D array of integers.
=> The size should be given by the user.
=> Initialize all elements with zero.
=> Then, let the user update values at different positions.
=> Finally, print the array and deallocate memory properly.
*/

int main() {
    int n;
    cout<<"Enter size: ";
    cin>>n;
    int* arr=new int[n];
    for(int i=0;i<n;i++)
    {
        arr[i]=0;
    }
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    int x;
    while(1){
    cout<<"\nTo exit press: 010\nEnter the index you wish to update: ";
    cin>>x;
    if(x!=010&& (x>=0&&x<n))
    {
        cout<<"Enter updated value: ";
        cin>>arr[x];
    }
    else
    {
        cout<<"Updated array: ";
        for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    
       delete[] arr;
        cout<<"Exiting program;";
        return 0;
    }}
    
}
