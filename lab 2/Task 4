#include <iostream>
using namespace std;

/*
Task #4:
Create a dynamic program that manages monthly expenses for a family.
=> Use a 1D dynamic array to store expenses for n months.
=> Add a feature to resize the array if the user wants to track more months later.
=> Compute and display the total and average expenses.
*/
int main() {
    int n;
    cout<<"Enter number of months: ";
    cin>>n;
    int* array=new int[n];
    for(int i=0;i<n;i++)
    {
        cout<<"Enter expense of month "<<i+1<<": ";
        cin>>array[i];
    }
    int newcount;
    cout<<"Enter new size: ";
    cin>>newcount;
    int* arraynew=new int[newcount];
    for(int i=0;i<n;i++)
    {
        arraynew[i]=array[i];              
    }
    int x;
    for(int i=n;i<newcount;i++)
    {
        cout<<"Enter new value at index "<<i+1<<": ";
        cin>>x;
        arraynew[i]=x;
    }
    delete[] array;
    array=arraynew;
    cout<<"Printing expense: \n";
    int sum=0,avg=0;
    for(int i=0;i<newcount;i++)
    {
        cout<<arraynew[i]<<" at month "<<i+1;
        cout<<"\n";
        sum+=arraynew[i];
    }
    avg=sum/newcount;
    cout<<"Average of all expenses is: "<<avg;
    delete[] arraynew;
    return 0;
}
