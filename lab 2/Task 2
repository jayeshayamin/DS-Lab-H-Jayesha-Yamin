#include <iostream>
using namespace std;

/*
Task #2:
Write a program that uses a dynamic 2D array to represent a seating chart in a classroom.
=> Rows represent benches, columns represent seats on each bench.
=> Initialize the array with 0 (empty).
=> Let the user fill seats (1 for occupied).
=> Print the final seating chart in matrix form.
*/

int main() {
    int r,c;
    cout<<"Enter size of rows: ";
    cin>>r;
    cout<<"Enter size of columns: ";
    cin>>c;
    int** arr=new int*[r];
    for(int i=0;i<r;i++)
    {
        arr[i]=new int[c];
    }
    for(int i=0;i<r;i++)
    { for(int j=0;j<c;j++){
        arr[i][j]=0;}
    }
    for(int i=0;i<r;i++)
    { for(int j=0;j<c;j++){
        cout<<arr[i][j];}
        cout<<"\n";
    }
    int n,m;
    while(1){
       cout<<"\nEnter row and  column to fill.\n";
    cin>>n;
    cin>>m;
    //chooose out of bound n and m to immediately get final seat chart
        if((n>=0&&n<r)&&(m>=0&&m<c))
        {
    
    arr[n][m]=1;}
    else
    {
        cout<<"updated chart: \n";
    for(int i=0;i<r;i++)
    { for(int j=0;j<c;j++){
        cout<<arr[i][j];}
        cout<<"\n";
    }
    for(int i=0;i<r;i++)
       delete[] arr[i];
        delete[] arr;
    return 0;
    }
    }
}
    
